@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}


<div class="text-center">


    <h1 class="display-4">
        Editar contato
    </h1>


</div>


<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type ="hidden" asp-for="Id"/>

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" aria-describedby="Nome completo" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)

    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" aria-describedby="Nome email" placeholder="Digite o e-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)

    </div>

    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" aria-describedby="Telefone completo" placeholder="Digite o telefone do contato">
        @Html.ValidationMessageFor(x => x.Telefone)

    </div>



    <br />
    <div class="d-grid gap-2">

        <button type="submit" class="btn btn-primary">Alterar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

    </div>
</form>

