@using ControleDeContatos.Enums
@model UsuarioModel

@{
    ViewData["Title"] = "Criar usuário";
}


<div class="text-center">


    <h1 class="display-4">
        Cadastrar usuário
    </h1>


</div>


<form asp-controller="Usuario" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" aria-describedby="Nome completo" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x=> x.Name)
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" aria-describedby="Nome email" placeholder="Digite o e-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)

    </div>

    <div class="form-group">
        <label for="Login">Login</label>
        <input type="text" asp-for="Login" class="form-control" aria-describedby="Login completo" placeholder="Digite o Login do contato">
        @Html.ValidationMessageFor(x => x.Login)

    </div>


    <div class="form-group">
        <label for="Perfil">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="@PefilEnum.admin">Administrador</option>
            <option value="@PefilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>


    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" aria-describedby="Senha do usuário" placeholder="Digite a senha do contato">
        @Html.ValidationMessageFor(x => x.Senha)

    </div>

    <br />
    <div class = "d-grid gap-2">

        <button type="submit" class="btn btn-primary">Adicionar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

    </div>
</form>

